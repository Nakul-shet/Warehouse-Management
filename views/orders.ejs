<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stocks</title>

    <link rel="stylesheet" href="homestyle.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@1,700&family=Montserrat:ital,wght@1,600;1,800&family=Ubuntu:ital,wght@1,500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="style.css">
</head>
<body>

    <%- include("./partials/nav.ejs") -%>

    <div class="container order-container">
        <div class="row">
            <div class="col-lg-6">
                <form class="avail-form" action="/findAvail" method="post">
                    <div class="form-group">
                        <select class="form-select" name="selected" aria-label="Default select example">
                            <option selected>Search for Availability</option>
                            <!-- <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option> -->
                            <% categories.forEach((cat) => { %>
                                <option value="<%= cat %>"><%= cat %></option>
                            <% }) %>
                          </select>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-block bg-success text-white" >Check Availability</button>
                </form>
            </div>
            <div class="col-lg-6">

                <div class="avail-message">
                    <h2><img width="80px" height="80px" src="https://cdn-icons-png.flaticon.com/512/7444/7444292.png"/> &nbsp  <%= typeof msg != 'undefined' ? msg : 'Availability :  ' %></h2>

                    
                </div>

            </div>

            <!-- <a href="/order">Order</a> -->
            
            <button class="btn btn-md bg-primary text-white order-button"><a href="/order" class="text-white order-btn">Order</a></button>
        </div>
    </div>

    
    
</body>
</html>